# AI Contract Analyzer Environment Variables
# Copy this file to .env and fill in your actual values

# Flask Configuration
SECRET_KEY=your-secret-key-here-change-this-in-production

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_VISION_MODEL=gpt-4o-mini

# DeepSeek Configuration
DEEPSEEK_API_KEY=your_deepseek_api_key_here

# Application Settings
OFFLINE_MODE=False
DEBUG=True
HOST=0.0.0.0
PORT=5001

# File Upload Settings
MAX_CONTENT_LENGTH=52428800  # 50MB in bytes
UPLOAD_FOLDER=uploads

# Google Cloud Document AI (Required for OCR)
# Find these values in your Google Cloud Console under Document AI > Processors.
# The Prediction Endpoint URL contains the project ID, location, and processor ID.
GOOGLE_CLOUD_PROJECT_ID=419669799133
GOOGLE_CLOUD_LOCATION=us
DOCUMENT_AI_PROCESSOR_ID=41c2dbad5ce38e5d

# For deployment (e.g., Railway), paste the entire content of your
# service account JSON key file into this variable.
GOOGLE_APPLICATION_CREDENTIALS_JSON=

# For local development, you can uncomment this and point to the key file.
# The app prioritizes GOOGLE_APPLICATION_CREDENTIALS_JSON if both are set.
# GOOGLE_APPLICATION_CREDENTIALS=path/to/your/service-account.json 